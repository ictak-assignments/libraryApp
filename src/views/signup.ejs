            <h2>sign Up</h2>
            <form action="" name="form1" onsubmit="return !!( ValidateEmail(document.form1.email1) & phonenumber(document.form1.mobilenumber) & CheckPassword(document.form1.password1));">

                <div class="form-group">
                    <label for="name">User Name:</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter your desired User Name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="age">Phone:</label>
                    <input type="text" class="form-control" id="mobilenumber" placeholder="type like 997-255-2800/997.255.2800" name="mobilenumber" required>
                </div>






                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="text" class="form-control" id="email" placeholder="Enter email" name="email1" required>
                </div>

                <div class="form-group">
                    <label for="psw" id="pswl">Password:</label>
                    <input  onkeyup="return !!( checkPassStrength(myInput.value) & passwordstrength(myInput.value))"type="password" class="form-control" id="psw" placeholder="Enter password" name="password1" required>
                </div>

                <div class="form-group form-check">
                    <label class="form-check-label">
                <input class="form-check-input" type="checkbox" name="remember"> Remember me
                </label>
                </div>

                <button type="submit" id="submit" class="btn btn-success">Submit</button>

            </form>
        </div>
